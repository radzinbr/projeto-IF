    form {
      max-width: 100%;
      margin: 20px auto;
      height: 100%;
      flex-direction: column;
    }

    label {
      display: block;
      margin-bottom: 8px;
      float: left;
    }

    input,
    textarea, select {
      width: 100%;
      padding: 8px;
      margin-bottom: 12px;
      box-sizing: border-box;
      background-color: transparent;
      border: 1px solid gray;
      color: rgb(204, 204, 204);
    }

    .centered-button {
      text-align: center;
      transition: background-color 0.3s ease;
    }

    .centered-button button {
      background-color: #6db2e0;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 15px;
    }

    .centered-button button:hover {
      background-color: #5d93b8;
    }

    .icon-container {
      display: flex;
      align-items: center;
      margin: auto;
      justify-content: center;

    }

    .icon {
      width: 80px;
      height: 80px;
      margin: 0 10px;
      border-radius: 50%;
      overflow: hidden;
      border: 2px solid #ccc;
      /* Cor da borda padrão */
      transition: border-color 0.3s ease-in-out;
    }

    .icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .selected {
      border-color: #5d93b8;
      /* Cor da borda quando selecionado */
    }
  </style>


